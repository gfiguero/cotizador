<html lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Kore">
    <meta name="language" content="es">
    <title>Login</title>
    <link href="{{ asset('vendor/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('vendor/jquery-ui/themes/base/jquery-ui.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/koreagent/css/agent.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/koreadmin/css/admin.css') }}" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style type="text/css">.login{display:flex;flex-direction:column;justify-content:center;}#login-page{height: 100vh;}</style>
</head>
<body>
    {% trans_default_domain 'KoreUserBundle' %}
    <div class="container-fluid">
        <div class="row login" id="login-page">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'login.form.title'|trans }}</h3>
                    </div>
                    <div class="panel-body">
                        {% if error %}<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>{% endif %}
                        <form method="post" action="{{ path('front_login') }}">
                            <div class="form-group">
                                <label class="control-label required" for="username">{{'login.form.username'|trans}}</label>
                                <input type="text" id="username" name="_username" required="required" class="form-control" value="{{ last_username }}">
                            </div>
                            <div class="form-group">
                                <label class="control-label required" for="password">{{'login.form.password'|trans}}</label>
                                <input type="password" id="password" name="_password" required="required" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <button type="submit" class="btn btn-primary pull-right">{{ icon('sign-in') }}&nbsp;{{ 'login.form.submit'|trans }}</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-ui/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js') }}"></script>
</body>
</html>
