{% extends "KoreUserBundle:Base:layout.html.twig" %}

{% trans_default_domain 'KoreUserBundle' %}

{% block title %}&nbsp;-&nbsp;{{ 'security.login.title'|trans }}{% endblock %}

{% block user %}
    <section id="user">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h1 class="panel-title">{{ 'security.login.title'|trans }}</h1>
                        </div>
                        <div class="panel-body">
                            {% if error %}
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                                {% if csrf_token %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                {% endif %}
                                
                                <div class="form-group">
                                    <label for="username" class="control-label col-sm-4">{{ 'security.form.username'|trans }}</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control uiuser-form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="control-label col-sm-4">{{ 'security.form.password'|trans }}</label>
                                    <div class="col-sm-8">
                                        <input type="password" id="password" name="_password" required="required" class="form-control uiuser-form-control" />
                                    </div>
                                </div>
{#}
                                <div class="form-group"> 
                                    <div class="col-sm-8 col-sm-offset-4">
                                        <div class="checkbox">
                                            <label for="remember_me">
                                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                                {{ 'security.form.remember_me'|trans }}
                                            </label>
                                        </div>
                                    </div>
                                </div>
{#}
                                <div class="form-group">
                                    <div class="col-sm-8 col-sm-offset-4">
                                        <button type="submit" class="btn btn-primary" id="submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="panel-footer">
                            <div class="text-center">
                                <a href="{{ path("fos_user_registration_register") }}">{{ 'registration.register.link'|trans }}</a>&nbsp;-&nbsp;<a href="{{ path("fos_user_resetting_request") }}">{{ 'resetting.request.link'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>  
{% endblock %}
