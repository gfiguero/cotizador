{% extends "KoreUserBundle:Base:layout.html.twig" %}

{% trans_default_domain 'KoreUserBundle' %}

{% block title %}&nbsp;-&nbsp;{{ 'registration.confirmed.title'|trans }}{% endblock %}

{% block user %}
    <section id="user">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h1 class="panel-title">{{ 'registration.confirmed.title'|trans }}</h1>
                        </div>
                        <div class="panel-body">
                            <p>{{ 'registration.confirmed.message'|trans({'%username%': user.username}) }}</p>
                            {% if targetUrl %}<p><a href="{{ targetUrl }}">{{ 'registration.confirmed.back'|trans }}</a></p>{% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
