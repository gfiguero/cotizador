{% extends 'KoreAgentBundle:Base:layout.html.twig' %}
{% use 'KoreAgentBundle:Base:icons.html.twig' %}
{% use 'KoreAgentBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'KoreAgentBundle' %}

{% block title %}&nbsp;-&nbsp;{{ 'user.password.title'|trans }}{% endblock %}

{% block agent %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'user.password.title'|trans }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-password">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'user.password.form'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        {{ form_start(passwordForm, { 'style': 'horizontal', 'label_col' : 4, 'widget_col' : 8 }) }}
                            {{ form_widget(passwordForm) }}
                                <div class="form-group"><div class="col-lg-offset-4 col-lg-8">
                                    <button type="submit" class="btn btn-primary">{{ icon('save fa-fw') }}&nbsp;{{ 'user.password.submit'|trans }}</button>
                                </div></div>
                        {{ form_end(passwordForm) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-password -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}

