{% extends 'KoreAgentBundle:Base:base.html.twig' %}
{% use 'KoreAgentBundle:Base:navbar.html.twig' %}
{% use 'KoreAgentBundle:Base:sidebar.html.twig' %}
{% use 'KoreAgentBundle:Base:icons.html.twig' %}
{% use 'KoreAgentBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'KoreAgentBundle' %}

{% block title %}{{ 'budget.show.title'|trans({'%id%':budget.id}) }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'budget.show.title'|trans({'%id%':budget.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('agent_budget_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'budget.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('agent_budget_edit', { 'id': budget.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'budget.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'budget.delete.link'|trans }}</button>
                    <a type="button" class="btn btn-warning" href="{{ path('agent_budget_pdf', { 'id': budget.id }) }}" target="_blank">{{ icon('share fa-fw') }}&nbsp;{{ 'budget.show.cmpdf'|trans }}</a>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">

            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'budget.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'budget.form.id'|trans }}</dt>
                                <dd>{% if budget.id %}{{ budget.id }}{% endif %}</dd>
                            <dt>{{ 'budget.form.created_at'|trans }}</dt>
                                <dd>{% if budget.createdat %}{{ budget.createdat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}&nbsp;({{ budget.createdat|ago }}){% endif %}</dd>
                            <dt>{{ 'budget.form.updated_at'|trans }}</dt>
                                <dd>{% if budget.updatedat %}{{ budget.updatedat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}&nbsp;({{ budget.updatedat|ago }}){% endif %}</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'budget.show.total'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'budget.form.totalprice'|trans }}</dt>
                                <dd>{% if budget.totalprice %}{{ icon('dollar') }}&nbsp;{{ budget.totalprice|number_format(0, ',', '.') }}{% endif %}</dd>
                            <dt>{{ 'budget.form.totaldiscountprice'|trans }}</dt>
                                <dd>{% if budget.totaldiscountprice %}{{ icon('dollar') }}&nbsp;{{ budget.totaldiscountprice|number_format(0, ',', '.') }}{% endif %}</dd>
                            <dt>{{ 'budget.form.totalnetprice'|trans }}</dt>
                                <dd>{% if budget.totalnetprice %}{{ icon('dollar') }}&nbsp;{{ budget.totalnetprice|number_format(0, ',', '.') }}{% endif %}</dd>
                            <dt>{{ 'budget.form.totaliva'|trans }}</dt>
                                <dd>{% if budget.totaliva %}{{ icon('dollar') }}&nbsp;{{ budget.totaliva|number_format(0, ',', '.') }}{% endif %}</dd>
                            <dt>{{ 'budget.form.total'|trans }}</dt>
                                <dd>{% if budget.total %}{{ icon('dollar') }}&nbsp;{{ budget.total|number_format(0, ',', '.') }}{% endif %}</dd>
                        </dl>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-show -->

        <div class="row" id="page-client-seller">

            {% if budget.client %}
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'budget.show.client'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'client.form.name'|trans }}</dt>
                                <dd>{% if budget.client.name %}{{ budget.client.name }}{% endif %}</dd>
                            <dt>{{ 'client.form.contactname'|trans }}</dt>
                                <dd>{% if budget.client.contactname %}{{ budget.client.contactname }}{% endif %}</dd>
                            <dt>{{ 'client.form.phone'|trans }}</dt>
                                <dd>{% if budget.client.phone %}{{ budget.client.phone }}{% endif %}</dd>
                            <dt>{{ 'client.form.email'|trans }}</dt>
                                <dd>{% if budget.client.email %}{{ budget.client.email }}{% endif %}</dd>
                            <dt>{{ 'client.form.address'|trans }}</dt>
                                <dd>{% if budget.client.address %}{{ budget.client.address }}{% endif %}</dd>
                        </dl>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if budget.seller %}
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'budget.show.seller'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'seller.form.name'|trans }}</dt>
                                <dd>{% if budget.seller.name %}{{ budget.seller.name }}{% endif %}</dd>
                            <dt>{{ 'seller.form.phone'|trans }}</dt>
                                <dd>{% if budget.seller.phone %}{{ budget.seller.phone }}{% endif %}</dd>
                            <dt>{{ 'seller.form.email'|trans }}</dt>
                                <dd>{% if budget.seller.email %}{{ budget.seller.email }}{% endif %}</dd>
                        </dl>
                    </div>
                </div>
            </div>
            {% endif %}

        </div>
        <!-- /#page-client-seller -->

        <div class="row" id="page-items">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'budget.show.items'|trans }}</h2>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-middle table-bordered">
                            <thead>
                                <tr>
                                    <th>{{'item.form.product'|trans }}</th>
                                    <th>{{'product.form.cost'|trans }}</th>
                                    <th>{{'product.form.price'|trans }}</th>
                                    <th>{{'product.form.margin'|trans }}</th>
                                    <th>{{'item.form.quantity'|trans }}</th>
                                    <th>{{'item.form.discount'|trans }}</th>
                                    <th>{{'item.form.discountprice'|trans }}</th>
                                    <th>{{'item.form.totaldiscountprice'|trans }}</th>
                                    <th>{{'item.form.price'|trans }}</th>
                                    <th>{{'item.form.totalnetprice'|trans }}</th>
                                    <th>{{'item.form.totaliva'|trans }}</th>
                                    <th>{{'item.form.total'|trans }}</th>
                                </tr>
                            </thead>
                            {% for item in budget.items %}
                                <tr>
                                    <td>{{ item.product }}</td>
                                    <td class="text-right">{{ item.product.cost|number_format(0, ',', '.') }}</td>
                                    <td class="text-right">{{ item.product.price|number_format(0, ',', '.') }}</td>
                                    <td class="text-right">{{ (100 * item.product.margin)|number_format(0, ',', '.') ~ '%' }}</td>
                                    <td class="text-right">{{ item.quantity }}</td>
                                    <td class="danger text-right">{{ item.discount ~ '%' }}</td>
                                    <td class="danger text-right">{{ item.discountprice|number_format(0, ',', '.') }}</td>
                                    <td class="danger text-right">{{ item.totaldiscountprice|number_format(0, ',', '.') }}</td>
                                    <td class="info text-right">{{ item.netprice|number_format(0, ',', '.') }}</td>
                                    <td class="info text-right">{{ item.totalnetprice|number_format(0, ',', '.') }}</td>
                                    <td class="warning text-right">{{ item.totaliva|number_format(0, ',', '.') }}</td>
                                    <td class="success text-right">{{ item.total|number_format(0, ',', '.') }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-items -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'budget.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'budget.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'budget.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

