{% extends 'KoreAgentBundle:Base:layout.html.twig' %}
{% use 'KoreAgentBundle:Base:icons.html.twig' %}
{% use 'KoreAgentBundle:Base:flashbag.html.twig' %}
{% use 'KoreAgentBundle:Base:wysiwyg.html.twig' %}
{% use 'KoreAgentBundle:Base:multiselect.html.twig' %}

{% trans_default_domain 'KoreAgentBundle' %}

{% block title %}&nbsp;-&nbsp;{{ 'budget.new.title'|trans }}{% endblock %}

{% block agent %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'budget.new.title'|trans }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('agent_budget_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'budget.index.link'|trans }}</a>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-new">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'budget.new.form'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        {{ form_start(newForm, { 'style': 'horizontal' }) }}
                            {{ form_widget(newForm) }}
                            <div class="form-group">
                                <div class="col-md-10 col-md-offset-2">
                                    <button type="submit" class="btn btn-primary">{{ icon('save fa-fw') }}&nbsp;{{ 'budget.new.submit'|trans }}</button>
                                </div>
                            </div>
                        {{ form_end(newForm) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-new -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}

{% block stylesheet %}
    {% block wysiwygcss %}{{ parent() }}{% endblock %}
    {% block multiselectcss %}{{ parent() }}{% endblock %}
{% endblock %}

{% block javascript %}
    <script src="{{ asset('bundles/koreagent/js/budget.item.js') }}"></script>
    {% block wysiwygjs %}{{ parent() }}{% endblock %}
    {% block multiselectjs %}{{ parent() }}{% endblock %}
{% endblock %}
