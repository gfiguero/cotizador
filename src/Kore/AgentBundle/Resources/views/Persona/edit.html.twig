{% extends 'KoreAgentBundle:Base:base.html.twig' %}
{% use 'KoreAgentBundle:Base:navbar.html.twig' %}
{% use 'KoreAgentBundle:Base:sidebar.html.twig' %}
{% use 'KoreAgentBundle:Base:icons.html.twig' %}
{% use 'KoreAgentBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'KoreAgentBundle' %}

{% block title %}{{ 'persona.edit.title'|trans }}{% endblock %}

{% block body %}

    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'persona.edit.title'|trans }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-edit">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'persona.edit.form'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        {{ form_start(editForm, { 'style': 'horizontal' }) }}
                            {{ form_widget(editForm) }}
                                <div class="form-group"><div class="col-lg-offset-4 col-lg-8">
                                    <button type="submit" class="btn btn-primary">{{ icon('save') }}&nbsp;{{ 'persona.edit.submit'|trans }}</button>
                                </div></div>
                        {{ form_end(editForm) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-edit -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}

