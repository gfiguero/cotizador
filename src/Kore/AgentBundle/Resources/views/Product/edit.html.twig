{% extends 'KoreAgentBundle:Base:layout.html.twig' %}
{% use 'KoreAgentBundle:Base:icons.html.twig' %}
{% use 'KoreAgentBundle:Base:flashbag.html.twig' %}
{% use 'KoreAgentBundle:Base:wysiwyg.html.twig' %}
{% use 'KoreAgentBundle:Base:fileinput.html.twig' %}

{% trans_default_domain 'KoreAgentBundle' %}

{% block title %}{{ 'product.edit.title'|trans({'%id%':product.id}) }}{% endblock %}

{% block agent %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'product.edit.title'|trans({'%id%':product.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('agent_product_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'product.index.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'product.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-edit">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'product.edit.form'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        {{ form_start(editForm, { 'style': 'horizontal' }) }}
                            <div class="form-group"><div class="col-lg-offset-3 col-lg-9">
                                <h2>{{ 'product.section.identification'|trans }}</h2>
                            </div></div>
                            {{ form_row(editForm.name) }}
                            {{ form_row(editForm.short) }}
                            {{ form_row(editForm.description) }}
                            {{ form_row(editForm.imagefile) }}
                            {{ form_row(editForm.provider) }}
                            <div class="form-group"><div class="col-lg-offset-3 col-lg-9">
                                <h2>{{ 'product.section.features'|trans }}</h2>
                            </div></div>
                            {{ form_row(editForm.height) }}
                            {{ form_row(editForm.width) }}
                            {{ form_row(editForm.length) }}
                            {{ form_row(editForm.thickness) }}
                            {{ form_row(editForm.weight) }}
                            <div class="form-group"><div class="col-lg-offset-3 col-lg-9">
                                <h2>{{ 'product.section.trading'|trans }}</h2>
                            </div></div>
                            {{ form_row(editForm.cost) }}
                            {{ form_row(editForm.price) }}
                            {{ form_row(editForm.code) }}
                            {{ form_row(editForm.cm_code) }}
                            <div class="form-group"><div class="col-lg-offset-3 col-lg-9">
                                <h2>{{ 'product.section.branding'|trans }}</h2>
                            </div></div>
                            {{ form_row(editForm.brand) }}
                            {{ form_row(editForm.origin) }}
                            {{ form_row(editForm.resistance) }}
                            {{ form_row(editForm.warranty) }}
                            {{ form_row(editForm.certification) }}
                            <div class="form-group"><div class="col-lg-offset-3 col-lg-9">
                                <h2>{{ 'product.section.consumer'|trans }}</h2>
                            </div></div>
                            {{ form_row(editForm.consumer_name) }}
                            {{ form_row(editForm.consumer_age) }}
                            {{ form_row(editForm.consumer_capacity) }}
                            <div class="form-group"><div class="col-lg-offset-3 col-lg-9">
                                <h2>{{ 'product.section.structure'|trans }}</h2>
                            </div></div>
                            {{ form_row(editForm.structure_main) }}
                            {{ form_row(editForm.structure_side) }}
                            {{ form_row(editForm.structure_instalation) }}
                            {{ form_row(editForm.structure_anchorage) }}
                            {{ form_row(editForm.structure_assembly) }}
                            {{ form_row(editForm.structure_protection) }}
                            {{ form_row(editForm.structure_termination) }}
                            {{ form_row(editForm.structure_color) }}
                            {{ form_row(editForm.structure_size) }}
                            <div class="form-group"><div class="col-lg-offset-3 col-lg-9">
                                <button type="submit" class="btn btn-primary">{{ icon('save fa-fw') }}&nbsp;{{ 'product.edit.submit'|trans }}</button>
                            </div></div>
                        {{ form_end(editForm) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-edit -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'product.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'product.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash fa-fw') }}&nbsp;{{ 'product.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}

{% block stylesheet %}
    {% block wysiwygcss %}{{ parent() }}{% endblock %}
    {% block fileinputcss %}{{ parent() }}{% endblock %}
{% endblock %}

{% block javascript %}
    {% block wysiwygjs %}{{ parent() }}{% endblock %}
    {% block fileinputjs %}{{ parent() }}{% endblock %}
{% endblock %}
