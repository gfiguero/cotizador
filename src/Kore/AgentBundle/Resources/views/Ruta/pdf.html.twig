<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=0.8">
    <meta name="description" content="">
    <meta name="author" content="Kore">
    <meta name="language" content="es">
    <link href="{{ absolute_url(asset('vendor/font-awesome/css/font-awesome.min.css')) }}" rel="stylesheet" type="text/css">
    <link href="{{ absolute_url(asset('bundles/koreagent/css/agent.css')) }}" rel="stylesheet">
    <style type="text/css">thead { display: table-header-group } tfoot { display: table-row-group } tr { page-break-inside: avoid }</style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                {% trans_default_domain 'KoreAgentBundle' %}
                {% use 'KoreAgentBundle:Base:icons.html.twig' %}
                <div id="page-wrapper">
                    <div class="row" id="page-header">
                        <div class="col-md-12">
                            <h1 class="page-header">
                                {% block icons %}{{ parent() }}{% endblock %}{{ 'ruta.show.title'|trans({'%id%':ruta.id}) }}
                                <small class="text-center">
                                    {% if ruta.encuestador %}{{ ruta.encuestador }}{% endif %}
                                </small>
                                <em class="pull-right">{% if ruta.createdAt %}{{ ruta.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d/LLLL/Y") }}{% endif %}</em>
                            </h1>
                        </div>
                    </div>
                    <!-- /#page-header -->

                    <div class="row" id="page-list">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h2 class="panel-title">{{ 'solicitud.index.list'|trans }}</h2>
                                </div>
                                <table class="table table-middle">
                                    <thead>
                                        <tr>
                                            <th>{{ 'solicitud.form.unidadvecinal'|trans }}</th>
                                            <th>{{ 'solicitud.form.domicilio'|trans }}</th>
                                            <th>{{ 'solicitud.form.persona'|trans }}</th>
                                            <th>{{ 'solicitud.form.telefono'|trans }}</th>
                                            <th>{{ 'solicitud.form.created_at'|trans }}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for solicitud in ruta.solicitudes %}
                                        <tr>
                                            <td>{% if solicitud.domicilio %}{{ solicitud.domicilio.unidadvecinal }}{% endif %}</td>
                                            <td>{% if solicitud.domicilio %}{{ solicitud.domicilio }}{% endif %}</td>
                                            <td>{% if solicitud.persona %}{{ solicitud.persona }}{% endif %}</td>
                                            <td>{% if solicitud.persona %}{{ solicitud.persona.telefono }}{% endif %}</td>
                                            <td>{{ solicitud.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', 'd/LLLL/Y') }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /#page-list -->

                </div>
                <!-- /#page-wrapper -->

            </div>
        </div>
    </div>
</body>
</html>
