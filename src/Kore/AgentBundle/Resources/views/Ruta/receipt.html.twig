{% extends 'KoreAgentBundle:Base:base.html.twig' %}
{% use 'KoreAgentBundle:Base:navbar.html.twig' %}
{% use 'KoreAgentBundle:Base:sidebar.html.twig' %}
{% use 'KoreAgentBundle:Base:icons.html.twig' %}
{% use 'KoreAgentBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'KoreAgentBundle' %}

{% block title %}{{ 'ruta.receipt.title'|trans({'%id%':ruta.id}) }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'ruta.receipt.title'|trans({'%id%':ruta.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('agent_ruta_estado_0') }}">{{ icon('list') }}&nbsp;{{ 'ruta.index.r00.link'|trans }}</a>
                    <a type="button" class="btn btn-default" href="{{ path('agent_ruta_estado_5') }}">{{ icon('list') }}&nbsp;{{ 'ruta.index.r05.link'|trans }}</a>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-receipt">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'ruta.receipt.form'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        {{ form_start(receiptForm, { 'style': 'horizontal' }) }}
                            {{ form_row(receiptForm.estado) }}
                            {{ form_row(receiptForm.encuestador) }}
                            {{ include('KoreAgentBundle:Ruta:liststatus.html.twig', {'form':receiptForm}) }}
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-primary pull-right">{{ icon('save') }}&nbsp;{{ 'ruta.receipt.submit'|trans }}</button>
                                </div>
                            </div>
                        {{ form_end(receiptForm) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-receipt -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}

