{% extends 'KoreAdminBundle:Base:base.html.twig' %}
{% use 'KoreAdminBundle:Base:navbar.html.twig' %}
{% use 'KoreAdminBundle:Base:sidebar.html.twig' %}
{% use 'KoreAdminBundle:Base:icons.html.twig' %}
{% use 'KoreAdminBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'KoreAdminBundle' %}

{% block title %}{{ 'issuer.show.title'|trans({'%id%':issuer.id}) }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'issuer.show.title'|trans({'%id%':issuer.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('admin_issuer_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'issuer.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('admin_issuer_edit', { 'id': issuer.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'issuer.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'issuer.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'issuer.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'issuer.form.id'|trans }}</dt>
                                <dd>{% if issuer.id %}{{ issuer.id }}{% endif %}</dd>
                            <dt>{{ 'issuer.form.name'|trans }}</dt>
                                <dd>{% if issuer.name %}{{ issuer.name }}{% endif %}</dd>
                            <dt>{{ 'issuer.form.rut'|trans }}</dt>
                                <dd>{% if issuer.rut %}{{ issuer.rut }}{% endif %}</dd>
                            <dt>{{ 'issuer.form.address_street'|trans }}</dt>
                                <dd>{% if issuer.addressstreet %}{{ issuer.addressstreet }}{% endif %}</dd>
                            <dt>{{ 'issuer.form.address_number'|trans }}</dt>
                                <dd>{% if issuer.addressnumber %}{{ issuer.addressnumber }}{% endif %}</dd>
                            <dt>{{ 'issuer.form.created_at'|trans }}</dt>
                                <dd>{% if issuer.createdat %}{{ issuer.createdat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ issuer.createdat|ago }}){% endif %}</dd>
                            <dt>{{ 'issuer.form.updated_at'|trans }}</dt>
                                <dd>{% if issuer.updatedat %}{{ issuer.updatedat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ issuer.updatedat|ago }}){% endif %}</dd>                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'issuer.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'issuer.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'issuer.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

