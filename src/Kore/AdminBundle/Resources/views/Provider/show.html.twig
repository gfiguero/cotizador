{% extends 'KoreAdminBundle:Base:base.html.twig' %}
{% use 'KoreAdminBundle:Base:navbar.html.twig' %}
{% use 'KoreAdminBundle:Base:sidebar.html.twig' %}
{% use 'KoreAdminBundle:Base:icons.html.twig' %}
{% use 'KoreAdminBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'KoreAdminBundle' %}

{% block title %}{{ 'provider.show.title'|trans({'%id%':provider.id}) }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'provider.show.title'|trans({'%id%':provider.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('admin_provider_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'provider.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('admin_provider_edit', { 'id': provider.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'provider.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'provider.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'provider.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'provider.form.id'|trans }}</dt>
                                <dd>{% if provider.id %}{{ provider.id }}{% endif %}</dd>
                            <dt>{{ 'provider.form.name'|trans }}</dt>
                                <dd>{% if provider.name %}{{ provider.name }}{% endif %}</dd>
                            <dt>{{ 'provider.form.rut'|trans }}</dt>
                                <dd>{% if provider.rut %}{{ provider.rut }}{% endif %}</dd>
                            <dt>{{ 'provider.form.contactname'|trans }}</dt>
                                <dd>{% if provider.contactname %}{{ provider.contactname }}{% endif %}</dd>
                            <dt>{{ 'provider.form.phone'|trans }}</dt>
                                <dd>{% if provider.phone %}{{ provider.phone }}{% endif %}</dd>
                            <dt>{{ 'provider.form.email'|trans }}</dt>
                                <dd>{% if provider.email %}{{ provider.email }}{% endif %}</dd>
                            <dt>{{ 'provider.form.address'|trans }}</dt>
                                <dd>{% if provider.address %}{{ provider.address }}{% endif %}</dd>
                            <dt>{{ 'provider.form.created_at'|trans }}</dt>
                                <dd>{% if provider.createdat %}{{ provider.createdat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}&nbsp;({{ provider.createdat|ago }}){% endif %}</dd>
                            <dt>{{ 'provider.form.updated_at'|trans }}</dt>
                                <dd>{% if provider.updatedat %}{{ provider.updatedat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}&nbsp;({{ provider.updatedat|ago }}){% endif %}</dd>                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'provider.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'provider.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'provider.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

