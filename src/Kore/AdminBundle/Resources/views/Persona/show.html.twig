{% extends 'KoreAdminBundle:Base:base.html.twig' %}
{% use 'KoreAdminBundle:Base:navbar.html.twig' %}
{% use 'KoreAdminBundle:Base:sidebar.html.twig' %}
{% use 'KoreAdminBundle:Base:icons.html.twig' %}
{% use 'KoreAdminBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'KoreAdminBundle' %}

{% block title %}{{ 'persona.show.title'|trans({'%id%':persona.id}) }}{% endblock %}

{% block body %}

    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'persona.show.title'|trans({'%id%':persona.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('admin_persona_index') }}">{{ icon('list') }}&nbsp;{{ 'persona.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('admin_persona_edit', { 'id': persona.id }) }}">{{ icon('edit') }}&nbsp;{{ 'persona.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o') }}&nbsp;{{ 'persona.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'persona.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl>
                            <dt>{{ 'persona.form.id'|trans }}</dt>
                                <dd>{% if persona.id %}{{ persona.id }}{% endif %}</dd>
                            <dt>{{ 'persona.form.rut'|trans }}</dt>
                                <dd>{% if persona.rut %}{{ persona.rut }}{% endif %}</dd>
                            <dt>{{ 'persona.form.primernombre'|trans }}</dt>
                                <dd>{% if persona.primernombre %}{{ persona.primernombre }}{% endif %}</dd>
                            <dt>{{ 'persona.form.segundonombre'|trans }}</dt>
                                <dd>{% if persona.segundonombre %}{{ persona.segundonombre }}{% endif %}</dd>
                            <dt>{{ 'persona.form.primerapellido'|trans }}</dt>
                                <dd>{% if persona.primerapellido %}{{ persona.primerapellido }}{% endif %}</dd>
                            <dt>{{ 'persona.form.segundoapellido'|trans }}</dt>
                                <dd>{% if persona.segundoapellido %}{{ persona.segundoapellido }}{% endif %}</dd>
                            <dt>{{ 'persona.form.email'|trans }}</dt>
                                <dd>{% if persona.email %}{{ persona.email }}{% endif %}</dd>
                            <dt>{{ 'persona.form.celular'|trans }}</dt>
                                <dd>{% if persona.celular %}{{ persona.celular }}{% endif %}</dd>
                            <dt>{{ 'persona.form.telefono'|trans }}</dt>
                                <dd>{% if persona.telefono %}{{ persona.telefono }}{% endif %}</dd>
                            <dt>{{ 'persona.form.createdAt'|trans }}</dt>
                                <dd>{% if persona.createdAt %}{{ persona.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                            <dt>{{ 'persona.form.updatedAt'|trans }}</dt>
                                <dd>{% if persona.updatedAt %}{{ persona.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'persona.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'persona.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o') }}&nbsp;{{ 'persona.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

