{% extends 'KoreAdminBundle:Base:layout.html.twig' %}
{% use 'KoreAdminBundle:Base:icons.html.twig' %}
{% use 'KoreAdminBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'KoreAdminBundle' %}

{% block title %}&nbsp;-&nbsp;{{ 'client.show.title'|trans({'%id%':client.id}) }}{% endblock %}

{% block admin %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'client.show.title'|trans({'%id%':client.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('admin_client_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'client.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('admin_client_edit', { 'id': client.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'client.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'client.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'client.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'client.form.id'|trans }}</dt>
                                <dd>{% if client.id %}{{ client.id }}{% endif %}</dd>
                            <dt>{{ 'client.form.name'|trans }}</dt>
                                <dd>{% if client.name %}{{ client.name }}{% endif %}</dd>
                            <dt>{{ 'client.form.rut'|trans }}</dt>
                                <dd>{% if client.rut %}{{ client.rut }}{% endif %}</dd>
                            <dt>{{ 'client.form.contactname'|trans }}</dt>
                                <dd>{% if client.contactname %}{{ client.contactname }}{% endif %}</dd>
                            <dt>{{ 'client.form.phone'|trans }}</dt>
                                <dd>{% if client.phone %}{{ client.phone }}{% endif %}</dd>
                            <dt>{{ 'client.form.email'|trans }}</dt>
                                <dd>{% if client.email %}{{ client.email }}{% endif %}</dd>
                            <dt>{{ 'client.form.address_street'|trans }}</dt>
                                <dd>{% if client.addressstreet %}{{ client.addressstreet }}{% endif %}</dd>
                            <dt>{{ 'client.form.address_number'|trans }}</dt>
                                <dd>{% if client.addressnumber %}{{ client.addressnumber }}{% endif %}</dd>
                            <dt>{{ 'client.form.comment'|trans }}</dt>
                                <dd>{% if client.comment %}{{ client.comment }}{% endif %}</dd>
                            <dt>{{ 'client.form.created_at'|trans }}</dt>
                                <dd>{% if client.createdat %}{{ client.createdat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ client.createdat|ago }}){% endif %}</dd>
                            <dt>{{ 'client.form.updated_at'|trans }}</dt>
                                <dd>{% if client.updatedat %}{{ client.updatedat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ client.updatedat|ago }}){% endif %}</dd>                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'client.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'client.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'client.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

