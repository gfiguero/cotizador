    {% elseif '_item_' in app.request.attributes.get( '_route' ) %}{{ icon('dollar fa-fw') }}
    {% elseif '_product_' in app.request.attributes.get( '_route' ) %}{{ icon('cube fa-fw') }}
    {% elseif '_seller_' in app.request.attributes.get( '_route' ) %}{{ icon('user fa-fw') }}
    {% elseif '_budget_' in app.request.attributes.get( '_route' ) %}{{ icon('check-square-o fa-fw') }}
    {% elseif '_provider_' in app.request.attributes.get( '_route' ) %}{{ icon('truck fa-fw') }}
    {% endif %}
{% endblock %}
