{% extends 'KoreAdminBundle:Base:base.html.twig' %}
{% use 'KoreAdminBundle:Base:navbar.html.twig' %}
{% use 'KoreAdminBundle:Base:sidebar.html.twig' %}
{% use 'KoreAdminBundle:Base:icons.html.twig' %}
{% use 'KoreAdminBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'KoreAdminBundle' %}

{% block title %}{{ 'product.show.title'|trans({'%id%':product.id}) }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'product.show.title'|trans({'%id%':product.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('admin_product_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'product.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('admin_product_edit', { 'id': product.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'product.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'product.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'product.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'product.form.id'|trans }}</dt>
                                <dd>{% if product.id %}{{ product.id }}{% endif %}</dd>
                            <dt>{{ 'product.form.name'|trans }}</dt>
                                <dd>{% if product.name %}{{ product.name }}{% endif %}</dd>
                            <dt>{{ 'product.form.description'|trans }}</dt>
                                <dd>{% if product.description %}{{ product.description }}{% endif %}</dd>
                            <dt>{{ 'product.form.features'|trans }}</dt>
                                <dd>{% if product.features %}{{ product.features }}{% endif %}</dd>
                            <dt>{{ 'product.form.cost'|trans }}</dt>
                                <dd>{% if product.cost %}{{ product.cost }}{% endif %}</dd>
                            <dt>{{ 'product.form.price'|trans }}</dt>
                                <dd>{% if product.price %}{{ product.price }}{% endif %}</dd>
                            <dt>{{ 'product.form.image'|trans }}</dt>
                                <dd>{% if product.image %}{{ product.image }}{% endif %}</dd>
                            <dt>{{ 'product.form.cm_code'|trans }}</dt>
                                <dd>{% if product.cmcode %}{{ product.cmcode }}{% endif %}</dd>
                            <dt>{{ 'product.form.created_at'|trans }}</dt>
                                <dd>{% if product.createdat %}{{ product.createdat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}&nbsp;({{ product.createdat|ago }}){% endif %}</dd>
                            <dt>{{ 'product.form.updated_at'|trans }}</dt>
                                <dd>{% if product.updatedat %}{{ product.updatedat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}&nbsp;({{ product.updatedat|ago }}){% endif %}</dd>                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'product.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'product.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'product.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

