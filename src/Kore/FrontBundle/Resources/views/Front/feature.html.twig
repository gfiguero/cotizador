{% block feature %}
     <section id="feature">
        <div class="overlay">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2>{{ 'feature.title'|trans }}</h2>
                        <p>{{ 'feature.subtitle'|trans }}</p>
                    </div>
                    {% for item in [1,2,3,4,5,6,7,8,9] %}
                    <div class="col-md-4 text-center">
                        {{ icon('check-circle fa-4x') }}
                        <h3>{{ 'feature.item.title'|trans }}</h3>
                        <p>{{ 'feature.item.content'|trans }}</p>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}